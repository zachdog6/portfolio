<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="generate.MainController">
   <center>
      <VBox fx:id="center" alignment="CENTER" />
   </center>
   <top>
      <HBox fx:id="top" alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Image to PixelArt">
               <font>
                  <Font size="36.0" />
               </font>
            </Text>
         </children>
      </HBox>
   </top>
   <right>
      <VBox fx:id="right" alignment="TOP_CENTER" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#upload" text="Upload" />
            <Button mnemonicParsing="false" onAction="#download" text="Download" />
            <TextField fx:id="size" prefHeight="26.0" prefWidth="45.0" promptText="pixel size" />
         </children>
         <padding>
            <Insets left="2.0" right="2.0" top="20.0" />
         </padding>
      </VBox>
   </right>
</BorderPane>
