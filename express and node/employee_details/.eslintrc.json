{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": ["eslint:recommended", "plugin:node/recommended"],
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "globals": {
        "describe":true,
        "it":true,
        "after":true

    },
    "rules": {
        "node/no-extraneous-require": ["error", {
            "allowModules": ["body-parser", "chai", "chai-http"]
        }],
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}